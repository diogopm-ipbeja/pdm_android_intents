<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.ipbeja.pdm.intents">
    <!-- Esta permissão poderá ser necessária dependendo da sua versão do Android -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Intents">
        <activity android:name=".browser.BrowserAppActivity"></activity>
        <activity android:name=".camera.TakePhotoActivity" />
        <activity android:name=".receive.ResponseActivity" />
        <activity android:name=".receive.RequestActivity" />
        <activity android:name=".send.DataReceiverActivity" />
        <activity android:name=".send.SendDataActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>